{
  "name": "@decafhub/decaf-client-extras",
  "version": "0.1.1",
  "description": "DECAF Client Extras",
  "author": "Teloscube Pte Ltd",
  "license": "MIT",
  "private": false,
  "repository": {
    "url": "https://github.com/teloscube/decaf-client-javascript-extras",
    "type": "git"
  },
  "homepage": "https://github.com/teloscube/decaf-client-javascript-extras",
  "source": "./src/index.ts",
  "main": "./index.js",
  "module": "./es/index.js",
  "types": "./index.d.ts",
  "scripts": {
    "start": "tsc --watch",
    "test": "jest",
    "build": "rm -rf lib && tsc && tsc -p tsconfig.es.json && npm run make:docs",
    "make:docs": "typedoc",
    "deploy:docs": "gh-pages -d ./docs",
    "prepare": "npm run build && ./postinstall.sh"
  },
  "engines": {
    "node": ">=16"
  },
  "peerDependencies": {
    "@decafhub/decaf-client": "^0.4"
  },
  "dependencies": {
    "@telostat/prelude": "^0.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@decafhub/decaf-client": "^0.4.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.1",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "dotenv": "^16.0.3",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.7",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "./node_modules/.bin/prettier --write",
      "./node_modules/.bin/eslint"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
