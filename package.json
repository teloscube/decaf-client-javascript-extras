{
  "name": "@decafhub/decaf-client-extras",
  "version": "0.8.0",
  "description": "DECAF Client Extras",
  "author": "Teloscube Pte Ltd",
  "license": "MIT",
  "private": false,
  "repository": {
    "url": "https://github.com/teloscube/decaf-client-javascript-extras",
    "type": "git"
  },
  "homepage": "https://github.com/teloscube/decaf-client-javascript-extras",
  "source": "./src/index.ts",
  "main": "./index.js",
  "module": "./es/index.js",
  "types": "./index.d.ts",
  "scripts": {
    "start": "tsc --watch",
    "test": "jest",
    "build": "rm -rf lib && tsc && tsc -p tsconfig.es.json && npm run make:docs",
    "make:docs": "typedoc",
    "deploy:docs": "gh-pages -d ./docs",
    "prepare": "npm run build && ./postinstall.sh"
  },
  "engines": {
    "node": ">=22"
  },
  "peerDependencies": {
    "@decafhub/decaf-client": "^0.8"
  },
  "dependencies": {
    "@telostat/prelude": "^0.7",
    "dayjs": "^1.11.19"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@decafhub/decaf-client": "^0.8.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "ts-jest": "^29.4.6",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "./node_modules/.bin/prettier --write",
      "./node_modules/.bin/eslint"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
