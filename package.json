{
  "name": "@decafhub/decaf-client-extras",
  "version": "0.5.2",
  "description": "DECAF Client Extras",
  "author": "Teloscube Pte Ltd",
  "license": "MIT",
  "private": false,
  "repository": {
    "url": "https://github.com/teloscube/decaf-client-javascript-extras",
    "type": "git"
  },
  "homepage": "https://github.com/teloscube/decaf-client-javascript-extras",
  "source": "./src/index.ts",
  "main": "./index.js",
  "module": "./es/index.js",
  "types": "./index.d.ts",
  "scripts": {
    "start": "tsc --watch",
    "test": "jest",
    "build": "rm -rf lib && tsc && tsc -p tsconfig.es.json && npm run make:docs",
    "make:docs": "typedoc",
    "deploy:docs": "gh-pages -d ./docs",
    "prepare": "npm run build && ./postinstall.sh"
  },
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "@decafhub/decaf-client": "^0.6"
  },
  "dependencies": {
    "@telostat/prelude": "^0.6",
    "dayjs": "^1.11.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@decafhub/decaf-client": "^0.6.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "gh-pages": "^6.2.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "./node_modules/.bin/prettier --write",
      "./node_modules/.bin/eslint"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
