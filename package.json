{
  "name": "@decafhub/decaf-client-extras",
  "version": "0.0.1-SNAPSHOT",
  "description": "DECAF Client Extras",
  "author": "Teloscube Pte Ltd",
  "license": "MIT",
  "private": false,
  "repository": {
    "url": "https://github.com/teloscube/decaf-client-javascript-extras",
    "type": "git"
  },
  "homepage": "https://github.com/teloscube/decaf-client-javascript-extras",
  "source": "./src/index.ts",
  "main": "./index.js",
  "module": "./es/index.js",
  "types": "./index.d.ts",
  "scripts": {
    "start": "tsc --watch",
    "build": "rm -rf lib && tsc && tsc -p tsconfig.es.json && yarn make:docs",
    "make:docs": "typedoc",
    "deploy:docs": "gh-pages -d ./docs",
    "prepare": "yarn build && ./postinstall.sh"
  },
  "engines": {
    "node": ">=14"
  },
  "peerDependencies": {
    "@decafhub/decaf-client": "~0.2"
  },
  "dependencies": {
    "@telostat/prelude": "^0.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@decafhub/decaf-client": "^0.2.2",
    "@types/node": "^18.6.1",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typedoc": "^0.23.9",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "./node_modules/.bin/prettier --write",
      "./node_modules/.bin/eslint"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
